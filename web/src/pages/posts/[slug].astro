---
import Layout from '../../layouts/Layout.astro';
import Sidebar from '../../components/Sidebar.astro';

// 1. CADASTRAR POSTS (Mantive os mesmos para não quebrar)
export async function getStaticPaths() {
  const posts = [
    { 
        slug: 'meio-campo-moderno', 
        title: 'Como o meio-campo moderno revolucionou o Brasileirão',
        category: 'Brasileirão',
        image: 'https://images.unsplash.com/photo-1556056504-5c7696c4c28d?q=80&w=2000&auto=format&fit=crop'
    },
    { 
        slug: 'defesa-falhando', 
        title: 'Bola Murcha: Por que a defesa do líder está falhando?',
        category: 'Brasileirão',
        image: 'https://images.unsplash.com/photo-1579952363873-27f3bade9f55?q=80&w=1000&auto=format&fit=crop'
    },
    { 
        slug: 'falso-9', 
        title: 'Entendendo o Futebol: O que é o "Falso 9"?',
        category: 'Olho no Lance',
        image: 'https://images.unsplash.com/photo-1518609878373-06d740f60d8b?q=80&w=1000&auto=format&fit=crop'
    },
    { 
        slug: 'estadios-bizarros', 
        title: 'Curiosidades: Os estádios mais bizarros do mundo',
        category: 'Curiosidades',
        image: 'https://images.unsplash.com/photo-1522778119026-d647f0565c6a?q=80&w=1000&auto=format&fit=crop'
    },
    { 
        slug: 'revelacao-base', 
        title: 'Revelação da base assina contrato milionário',
        category: 'Mercado',
        image: 'https://images.unsplash.com/photo-1431324155629-1a6deb1dec8d?q=80&w=1000&auto=format&fit=crop'
    },
  ];

  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;

// Dados fixos complementares
const fullPost = {
  ...post,
  author: "Renato Dias",
  date: "21 Jan, 2026",
  tags: ["Tática", post.category, "Análise", "Futebol Moderno"]
};

const readTime = 5;
