---
import '../styles/app.css';
import Header from '../components/Header.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description = "Notícias esportivas.", image = "/images/logo-borajogador.png" } = Astro.props;
---

<!doctype html>
<html lang="pt-BR" class="bg-bj-black scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title} | Bora Jogador</title>
		<meta name="description" content={description} />
		<meta property="og:image" content={image} />
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Oswald:wght@500;700&display=swap" rel="stylesheet">

		<ViewTransitions />
	</head>
	<body class="text-bj-gray antialiased min-h-screen flex flex-col">
	<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5066122308491062"
     crossorigin="anonymous"></script>
		<Header />
		
		<main class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<slot />
		</main>

		<footer class="bg-bj-surface border-t border-white/5 pt-16 pb-8 mt-20">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				
				<div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
					<div class="space-y-4">
						<img src="/images/logo-borajogador.png" alt="Bora Jogador" class="h-8 opacity-80" />
						<p class="text-sm text-bj-dim leading-relaxed">
							O melhor do futebol brasileiro e mundial analisado com seriedade, paixão e tática. Sem fake news, apenas jogo.
						</p>
					</div>

					<div>
						<h4 class="text-bj-white font-heading font-bold uppercase tracking-widest mb-6 text-sm">Editorias</h4>
						<ul class="space-y-3 text-sm text-bj-dim">
							<li><a href="/brasileirao" class="hover:text-bj-neon transition-colors">Brasileirão</a></li>
							<li><a href="/so-lendas" class="hover:text-bj-neon transition-colors">Só Lendas</a></li>
							<li><a href="/olho-no-lance" class="hover:text-bj-neon transition-colors">Olho no Lance</a></li>
							<li><a href="/mercado" class="hover:text-bj-neon transition-colors">Mercado da Bola</a></li>
						</ul>
					</div>

					<div>
						<h4 class="text-bj-white font-heading font-bold uppercase tracking-widest mb-6 text-sm">Instituição</h4>
						<ul class="space-y-3 text-sm text-bj-dim">
							<li><a href="/sobre" class="hover:text-bj-white transition-colors">Sobre Nós</a></li>
							<li><a href="/historia" class="hover:text-bj-white transition-colors">Nossa História</a></li>
							<li><a href="/contato" class="hover:text-bj-white transition-colors">Contato</a></li>
							<li><a href="/privacidade" class="hover:text-bj-white transition-colors">Política de Privacidade</a></li>
						</ul>
					</div>

					<div>
						<h4 class="text-bj-white font-heading font-bold uppercase tracking-widest mb-6 text-sm">Siga-nos</h4>
						<div class="flex gap-4">
							<a href="#" class="w-10 h-10 rounded-full bg-bj-black flex items-center justify-center text-bj-gray hover:bg-bj-neon hover:text-bj-black transition-all">
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
							</a>
							<a href="#" class="w-10 h-10 rounded-full bg-bj-black flex items-center justify-center text-bj-gray hover:bg-bj-neon hover:text-bj-black transition-all">
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4l11.733 16h4.267l-11.733 -16z"/><path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"/></svg>
							</a>
							<a href="#" class="w-10 h-10 rounded-full bg-bj-black flex items-center justify-center text-bj-gray hover:bg-bj-neon hover:text-bj-black transition-all">
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17"/><path d="m10 15 5-3-5-3z"/></svg>
							</a>
						</div>
					</div>
				</div>

				<div class="border-t border-white/5 pt-8 text-center md:text-left flex flex-col md:flex-row justify-between items-center text-xs text-bj-dim">
					<p>&copy; {new Date().getFullYear()} Bora Jogador. Todos os direitos reservados.</p>
					<p class="mt-2 md:mt-0 opacity-50">Desenvolvido com True Dark Energy.</p>
				</div>
			</div>
		</footer>
	</body>
</html>